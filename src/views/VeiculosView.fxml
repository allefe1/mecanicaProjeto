<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.VeiculoController">
    <!-- Tabela de Veículos -->
    <TableView fx:id="tableViewVeiculos" prefWidth="300" prefHeight="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="modeloColumn" text="Modelo" />
            <TableColumn fx:id="placaColumn" text="Placa" />
        </columns>
    </TableView>
    
    <!-- Campos de Entrada -->
    <TextField fx:id="modeloField" promptText="Modelo" layoutX="350" layoutY="50" />
    <TextField fx:id="placaField" promptText="Placa" layoutX="350" layoutY="100" />
    
    <!-- Botões de Ações -->
    <Button text="Adicionar Veículo" onAction="#addVeiculo" layoutX="350" layoutY="150" />
    <Button text="Remover Veículo" onAction="#removeVeiculo" layoutX="350" layoutY="200" />
    <Button text="Editar Veículo" onAction="#editarVeiculo" layoutX="350" layoutY="250" />
    
    <!-- Campo de Busca -->
    <TextField fx:id="searchFieldVeiculo" promptText="Buscar veículo" layoutX="350" layoutY="300" />
    <Button text="Buscar" onAction="#searchVeiculo" layoutX="350" layoutY="350" />
</AnchorPane>
